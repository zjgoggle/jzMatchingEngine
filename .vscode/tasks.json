{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-DTEST_CONFIG_IMPLEMENT_MAIN",
                "-std=c++20",
                "-g",
                "${file}",
                "-I${workspaceFolder}/src",
                "-o",
                "${workspaceFolder}/build-Debug/bin/${fileBasenameNoExtension}-test"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file", // run this before vscode: "C:\Program Files\Microsoft Visual Studio\2022\Community\Common7\Tools\VsDevCmd.bat"
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe${workspaceFolder}\\build-Debug\\bin\\${fileBasenameNoExtension}-test.exe",
                "/DTEST_CONFIG_IMPLEMENT_MAIN",
                "/I${workspaceFolder}/src",
                "/std:c++20",
                "${file}"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build-Debug"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}